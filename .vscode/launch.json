  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Compile",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "cinderblock",
      "runtimeArgs": ["compile"],
      "cwd": "${workspaceFolder}/${input:project}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Compile Tests",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "cinderblock",
      "runtimeArgs": ["test"],
      "cwd": "${workspaceFolder}/${input:project}"
    }
  ],
  "inputs": [
    {
      "id": "project",
      "type": "pickString",
      "description": "The project to open",
      "options": [
        "chained-operators",
        "enums",
        "externals",
        "functions",
        "hello-world",
        "if-expressions",
        "lambdas",
        "loop-concatination",
        "loops",
        "partial-invokation",
        "simple-maths",
        "tests",
        "specific-examples/string-equals"
      ]
    }
  ]
}
